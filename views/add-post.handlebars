 <div class="form-container">
    <h2>Create Post</h2>
  <form action="/addPost" method="POST" class="row g-3">
    <div class="form-group">
          <label class="form-label">Title:</label>
          <input type="text" class="form-control" name="title" id="title" name="title" required>
    </div>
        <div class="form-group">
          <label class="form-label">Author:</label>
          <input type="text" class="form-control" name="autor" id="autor" name="author" required>
        </div>
        <div class="form-group">
          <label class="form-label">Content:</label>
          <textarea class="form-control" id="post_text" name="post_text" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>

  </form>
 </div>

<!--- page used for create a new post!>