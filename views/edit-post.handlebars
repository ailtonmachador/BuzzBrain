 <div class="form-container">
    <h2>Edit Post</h2>
  <form action="/updatePost" method="POST" class="row g-3">
  <input type="hidden" name="id" value="{{post._id}}">
    <div class="form-group">
          <label class="form-label">Title:</label>
          <input type="text" class="form-control" name="title" id="title" name="title" value="{{post.title}}" required>
    </div>
        <div class="form-group">
          <label class="form-label">Author:</label>
          <input type="text" class="form-control" name="autor" id="autor" name="author" value="{{post.autor}}" required>
        </div>
        <div class="form-group">
          <label class="form-label">Content:</label>
          <textarea class="form-control" id="post_text" name="post_text" rows="5"  value="{{post.post_text}}" required>{{post.post_text}}</textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Done</button>

  </form>
 </div>

<!--- page used for create a new post!>